<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- 1 -->
    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@id/start"
        app:duration="1000">
        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@+id/rvContent"
            app:touchAnchorSide="top" />
    </Transition>

    <!-- 2 -->
    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@id/txtTitle">
            <PropertySet app:alpha="1" />
        </Constraint>
        <Constraint android:id="@id/txtSubtitle">
            <PropertySet app:alpha="1" />
        </Constraint>
    </ConstraintSet>

    <!-- 3 -->
    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@id/imgAppLogo"
            android:layout_width="70dp"
            android:layout_height="46dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:elevation="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></Constraint>
        <Constraint
            android:id="@id/vwToolbar"
            android:elevation="10dp"
            app:layout_constraintBottom_toTopOf="@id/spacer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></Constraint>
        <Constraint
            android:id="@id/txtTitle"
            android:layout_height="16dp"
            android:layout_marginStart="16dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="@+id/imgAppLogo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgAppLogo"
            app:layout_constraintTop_toTopOf="@+id/imgAppLogo"></Constraint>
        <Constraint
            android:id="@id/txtSubtitle"
            android:layout_height="16dp"
            android:layout_marginStart="16dp"
            android:alpha="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgAppLogo"
            app:layout_constraintTop_toBottomOf="@+id/txtTitle"></Constraint>
    </ConstraintSet>
</MotionScene>